<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/searchpage_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintHeight_percent="0.11"
        android:background="@color/color_Navigation"/>

    <ImageView
        android:id="@+id/searchpage_back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/leftarrow_searchpage"
        app:layout_constraintTop_toTopOf="@id/searchpage_title"
        app:layout_constraintBottom_toBottomOf="@id/searchpage_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/searchpage_search_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7"
        tools:layout_editor_absoluteY="9dp"
        app:layout_constraintTop_toTopOf="@id/searchpage_title"
        app:layout_constraintBottom_toBottomOf="@id/searchpage_title"
        android:background="@drawable/searchview_corners" />

    <ImageView
        android:id="@+id/searchpage_camera"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_clear"
        app:layout_constraintTop_toTopOf="@id/searchpage_search_et"
        app:layout_constraintBottom_toBottomOf="@id/searchpage_search_et"
        app:layout_constraintRight_toRightOf="@id/searchpage_search_et"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/searchpage_search_bt"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:text="@string/home_search"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchpage_search_et"
        app:layout_constraintBottom_toBottomOf="@id/searchpage_search_et"
        android:layout_marginRight="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/searchpage_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>