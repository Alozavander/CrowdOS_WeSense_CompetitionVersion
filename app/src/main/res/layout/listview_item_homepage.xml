<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/listview_topline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/listview_topline"/>

    <ImageView
        android:id="@+id/listview_userIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_home_black_24dp"
        />
    <TextView
        android:id="@+id/listview_userID"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintLeft_toRightOf="@id/listview_userIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="洋葱"
        android:textSize="12sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/listview_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/listview_userID"
        app:layout_constraintTop_toTopOf="@id/listview_userID"
        app:layout_constraintBottom_toBottomOf="@id/listview_userID"
        android:layout_marginLeft="10dp"
        android:text="9小时前"
        android:layout_marginTop="1.5dp"
        android:textSize="10sp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/listview_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/listview_userID"
        app:layout_constraintBottom_toBottomOf="@id/listview_Time"
        android:layout_marginRight="25dp"
        android:src="@drawable/menu_icon"/>

    <!--
    <ImageView
        android:id="@+id/listview_CategoryIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listview_userIcon"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/takephoto"/>  -->
    <TextView
        android:id="@+id/listview_taskKind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/listview_userID"
        app:layout_constraintTop_toBottomOf="@id/listview_userID"
        app:layout_constraintBottom_toBottomOf="@id/listview_userIcon"
        android:text="任务类型"
        android:textSize="10sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/listview_TaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listview_userIcon"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:text="任务名称"
        android:textSize="@dimen/font_12"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/listview_TaskContent"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listview_TaskName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="30dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="任务描述：改任务是XXXXXXXXXXX"
        android:textSize="@dimen/font_8" />
    <ImageView
        android:id="@+id/listview_Photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listview_TaskContent"
        android:layout_marginLeft="40dp"
        android:src="@drawable/testphoto_4"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/listview_CoinsIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listview_Photo"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/jinbi"/>
    <TextView
        android:id="@+id/listview_CoinsCount"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/listview_CoinsIcon"
        app:layout_constraintTop_toTopOf="@id/listview_CoinsIcon"
        app:layout_constraintBottom_toBottomOf="@id/listview_CoinsIcon"
        app:layout_constraintRight_toLeftOf="@id/listview_TaskCountIcon"
        android:gravity="center"
        android:text="10.0"
        android:layout_marginRight="20dp"
        android:textSize="10sp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/listview_TaskCountIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/listview_CoinsIcon"
        app:layout_constraintTop_toTopOf="@id/listview_CoinsIcon"
        app:layout_constraintBottom_toBottomOf="@id/listview_CoinsIcon"
        android:layout_marginLeft="50dp"
        android:src="@drawable/mounts"/>
    <TextView
        android:id="@+id/listview_TaskCount"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/listview_TaskCountIcon"
        app:layout_constraintTop_toTopOf="@id/listview_CoinsIcon"
        app:layout_constraintBottom_toBottomOf="@id/listview_CoinsIcon"
        android:gravity="center"
        android:text="10 Num"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"/>

    <!-- 暂时去掉这两个图片
    <ImageView
        android:id="@+id/listview_ShareIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listview_Photo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/share_icon_1"/>
    <ImageView
        android:id="@+id/listview_FavoriteIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toLeftOf="@id/listview_ShareIcon"
        app:layout_constraintTop_toBottomOf="@id/listview_Photo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/love_icon"/>   -->
    <TextView
        android:id="@+id/listview_DeadlineText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listview_Photo"
        android:layout_marginTop="3dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="截止时间：2018年12月31日"
        android:textSize="11sp"
        android:textColor="@color/black"/>
    <View
        android:id="@+id/listview_bottomline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/listview_DeadlineText"
        android:layout_marginTop="3dp"
        android:background="@color/listview_topline"/>


</androidx.constraintlayout.widget.ConstraintLayout>