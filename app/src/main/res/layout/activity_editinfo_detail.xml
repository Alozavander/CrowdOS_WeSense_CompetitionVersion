<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/minepage_editInfo_detail_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/edit"
        android:textSize="18sp"
        app:layout_constraintHeight_percent="0.09"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/minepage_editInfo_detail_title"/>

    <ImageView
        android:id="@+id/minepage_editInfo_detail_backerrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/backarrow"
        app:layout_constraintTop_toTopOf="@id/minepage_editInfo_detail_title"
        app:layout_constraintBottom_toBottomOf="@id/minepage_editInfo_detail_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/minepage_editInfo_detail_editview"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minepage_editInfo_detail_title"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:gravity="top|left"
        android:layout_height="200dp"
        android:maxLength="300"/>

    <Button
        android:id="@+id/minepage_editInfo_detail_confirm_bt"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/minepage_editInfo_detail_editview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/confirm"/>

</androidx.constraintlayout.widget.ConstraintLayout>