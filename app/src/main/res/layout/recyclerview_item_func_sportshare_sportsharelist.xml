<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/activity_func_sportShare_sportsl_userIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/haimian_usericon"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activity_func_sportShare_sportsl_userName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:gravity="left"
        android:text="用户：海绵宝宝"
        app:layout_constraintLeft_toRightOf="@id/activity_func_sportShare_sportsl_userIcon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/activity_func_sportShare_sportsl_mount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/activity_func_sportShare_sportsl_userName"
        app:layout_constraintBottom_toBottomOf="@id/activity_func_sportShare_sportsl_time"
        android:text="步数：2798"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/activity_func_sportShare_sportsl_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="今天  11:08"
        app:layout_constraintLeft_toRightOf="@id/activity_func_sportShare_sportsl_userIcon"
        app:layout_constraintBottom_toBottomOf="@id/activity_func_sportShare_sportsl_userIcon"
        android:gravity="left"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/listview_topline"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_func_sportShare_sportsl_time" />
</androidx.constraintlayout.widget.ConstraintLayout>