<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/publishpage_def_taskpublish_1_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/Custom_task_template"
        android:textSize="18sp"
        app:layout_constraintHeight_percent="0.09" />

    <ImageView
        android:id="@+id/minepage_backarrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_title"
        app:layout_constraintBottom_toBottomOf="@id/publishpage_def_taskpublish_1_title"
        android:src="@drawable/right_arrow"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_title" />

    <TextView
        android:id="@+id/publishpage_def_taskpublish_1_remind"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center|left"
        android:text="@string/Step_one"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_title" />


    <TextView
        android:id="@+id/publishpage_def_taskpublish_1_sensor"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:text="@string/sensor"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_remind"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_remind" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/def_taskpub_camera"
        app:layout_constraintLeft_toRightOf="@id/publishpage_def_taskpublish_1_sensor"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_remind" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_accelerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/acceleration"
        app:layout_constraintLeft_toRightOf="@id/publishpage_def_taskpublish_1_CB_camera"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_camera" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_heartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/heart_rate"
        app:layout_constraintLeft_toRightOf="@id/publishpage_def_taskpublish_1_CB_accelerate"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_accelerate" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/microphone"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_camera"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_CB_camera" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_accelerate"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_microphone" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_bloodOxygen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acceleration"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_heartRate"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_distance" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/microphone"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_microphone"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_CB_microphone" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_distance"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_GPS" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_magneticField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acceleration"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_bloodOxygen"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_light" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_Gyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/microphone"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_GPS"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_CB_GPS" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_light"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_Gyro" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acceleration"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_magneticField"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_pressure" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_fingerPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/microphone"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_Gyro"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_CB_Gyro" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_Hall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_pressure"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_fingerPrint" />

    <CheckBox
        android:id="@+id/publishpage_def_taskpublish_1_CB_ultravioletLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acceleration"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_CB_gravity"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_CB_Hall" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_CB_Hall" />


    <TextView
        android:id="@+id/publishpage_def_taskpublish_1_taskKind_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center|left"
        android:text="@string/task_type"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_sensor"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_CB_Hall" />

    <Spinner
        android:id="@+id/publishpage_def_taskpublish_1_taskKind_spinner"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:entries="@array/task_kinds"
        android:prompt="@string/task_kind_dialogtitle"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@+id/publishpage_def_taskpublish_1_taskKind_tv"
        app:layout_constraintLeft_toRightOf="@id/publishpage_def_taskpublish_1_taskKind_tv"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_taskKind_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_taskKind_tv" />


    <TextView
        android:id="@+id/publishpage_def_taskpublish_1_deadline_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center|left"
        android:text="@string/Deadline"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_taskKind_tv"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_taskKind_tv" />

    <TextView
        android:id="@+id/publishpage_def_taskpublish_1_deadline_dp"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:gravity="center|left"
        android:hint="@string/Click_to_get_date"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/publishpage_def_taskpublish_1_deadline_tv"
        app:layout_constraintLeft_toRightOf="@id/publishpage_def_taskpublish_1_deadline_tv"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_deadline_tv" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_deadline_tv" />


    <TextView
        android:id="@+id/publishpage_def_taskpublish_1_taskFreaquency_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center|left"
        android:text="@string/task_frequency_dialogtitle"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_deadline_tv"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_deadline_tv" />

    <Spinner
        android:id="@+id/publishpage_def_taskpublish_1_taskFreaquency_spinner"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:entries="@array/task_frequency"
        android:prompt="@string/task_frequency_dialogtitle"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@+id/publishpage_def_taskpublish_1_taskFreaquency_tv"
        app:layout_constraintLeft_toRightOf="@id/publishpage_def_taskpublish_1_taskFreaquency_tv"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_taskFreaquency_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_taskFreaquency_tv" />

    <TextView
        android:id="@+id/publishpage_def_taskpublish_1_taskUploadMode_tv"
        android:layout_width="98dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center|left"
        android:text="@string/task_uploadMode_dialogtitle"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/publishpage_def_taskpublish_1_taskFreaquency_tv"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_taskFreaquency_tv" />

    <Spinner
        android:id="@+id/publishpage_def_taskpublish_1_taskUploadMode_spinner"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:entries="@array/task_uploadMode"
        android:prompt="@string/task_uploadMode_dialogtitle"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@+id/publishpage_def_taskpublish_1_taskUploadMode_tv"
        app:layout_constraintLeft_toRightOf="@id/publishpage_def_taskpublish_1_taskUploadMode_tv"
        app:layout_constraintTop_toTopOf="@id/publishpage_def_taskpublish_1_taskUploadMode_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_taskUploadMode_tv" />


    <Button
        android:id="@+id/publishpage_def_taskpublish_1_button"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.618"
        android:layout_height="wrap_content"
        android:text="@string/retrieve_pwd_step_hint"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/publishpage_def_taskpublish_1_taskUploadMode_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        style="@style/Widget.AppCompat.Button"
        android:theme="@style/publishPage_button"/>




</androidx.constraintlayout.widget.ConstraintLayout>