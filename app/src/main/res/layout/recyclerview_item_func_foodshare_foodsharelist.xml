<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/listview_topline">

    <ImageView
        android:id="@+id/activity_func_foodShare_foodsl_userIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/haimian_usericon"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activity_func_foodShare_foodsl_userName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:gravity="left"
        android:text="用户：海绵宝宝"
        app:layout_constraintLeft_toRightOf="@id/activity_func_foodShare_foodsl_userIcon"
        app:layout_constraintTop_toTopOf="@id/activity_func_foodShare_foodsl_userIcon"
        app:layout_constraintBottom_toBottomOf="@id/activity_func_foodShare_foodsl_userIcon"/>

    <TextView
        android:id="@+id/activity_func_foodShare_foodsl_foodDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_func_foodShare_foodsl_userIcon"
        android:text="步数：2798"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/activity_func_foodShare_foodsl_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/testphoto_4"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_func_foodShare_foodsl_foodDescription" />

    <TextView
        android:id="@+id/activity_func_foodShare_foodsl_publishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天  11:08"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/activity_func_foodShare_foodsl_foodDescription"
        app:layout_constraintTop_toBottomOf="@id/activity_func_foodShare_foodsl_food"
        android:gravity="left" />

    <ImageView
        android:id="@+id/activity_func_foodShare_foodsl_favarite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/love_icon"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/activity_func_foodShare_foodsl_publishTime"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/listview_topline"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/activity_func_foodShare_foodsl_publishTime" />


</androidx.constraintlayout.widget.ConstraintLayout>