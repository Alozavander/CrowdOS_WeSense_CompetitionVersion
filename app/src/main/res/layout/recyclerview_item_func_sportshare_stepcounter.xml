<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/activity_func_sportShare_stepCounter_userIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/minepage_usericon_corner"
        android:src="@drawable/haimian_usericon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_steps"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/activity_func_sportShare_stepCounter_userIcon"/>

    <TextView
        android:id="@+id/activity_func_sportShare_stepCounter_stepCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="@id/activity_func_sportShare_stepCounter_userIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>