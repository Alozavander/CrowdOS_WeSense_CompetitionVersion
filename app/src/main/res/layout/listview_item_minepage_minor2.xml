<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/minepage_minor2_lvItem_taskID"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="center|left"
        android:text="任务号：20175551266985"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/minepage_minor2_lvItem_taskState"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="center|left"
        android:text="未完成"
        android:textColor="@color/light_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/minepage_minor2_lvItem_taskID" />

    <ImageView
        android:id="@+id/minepage_minor2_lvItem_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/spiderman_usericon"
        app:layout_constraintLeft_toLeftOf="@id/minepage_minor2_lvItem_taskID"
        app:layout_constraintTop_toBottomOf="@id/minepage_minor2_lvItem_taskID" />

    <TextView
        android:id="@+id/minepage_minor2_lvItem_Describe"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="裂缝识别"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/minepage_minor2_lvItem_pic"
        app:layout_constraintTop_toTopOf="@id/minepage_minor2_lvItem_pic" />

    <TextView
        android:id="@+id/minepage_minor2_lvItem_TaskContent"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="任务描述：改任务是XXXXXXXXXXX"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/minepage_minor2_lvItem_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minepage_minor2_lvItem_Describe" />

    <ImageView
        android:id="@+id/minepage_minor2_lvItem_CoinsIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/jinbi"
        app:layout_constraintBottom_toBottomOf="@id/minepage_minor2_lvItem_pic"
        app:layout_constraintLeft_toRightOf="@id/minepage_minor2_lvItem_pic" />

    <TextView
        android:id="@+id/minepage_minor2_lvItem_CoinsCount"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/minepage_minor2_lvItem_CoinsIcon"
        app:layout_constraintLeft_toRightOf="@id/minepage_minor2_lvItem_CoinsIcon"
        app:layout_constraintTop_toTopOf="@id/minepage_minor2_lvItem_CoinsIcon" />

    <ImageView
        android:id="@+id/minepage_minor2_lvItem_TaskCountIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/mounts"
        app:layout_constraintBottom_toBottomOf="@id/minepage_minor2_lvItem_CoinsIcon"
        app:layout_constraintLeft_toRightOf="@id/minepage_minor2_lvItem_CoinsCount"
        app:layout_constraintTop_toTopOf="@id/minepage_minor2_lvItem_CoinsIcon" />

    <TextView
        android:id="@+id/minepage_minor2_lvItem_TaskCount"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="10个"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/minepage_minor2_lvItem_CoinsIcon"
        app:layout_constraintLeft_toRightOf="@id/minepage_minor2_lvItem_TaskCountIcon"
        app:layout_constraintTop_toTopOf="@id/minepage_minor2_lvItem_CoinsIcon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/minepage_minor2_lvItem_TaskCount" />



</androidx.constraintlayout.widget.ConstraintLayout>