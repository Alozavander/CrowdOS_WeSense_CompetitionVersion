<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_coins_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/user_coins_userName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_18"
        app:layout_constraintLeft_toRightOf="@id/user_coins_image"
        app:layout_constraintTop_toTopOf="@id/user_coins_image"
        app:layout_constraintBottom_toBottomOf="@id/user_coins_image"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/user_coins_userCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_18"
        app:layout_constraintLeft_toRightOf="@id/user_coins_userName"
        app:layout_constraintTop_toTopOf="@id/user_coins_userName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>