<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/minepage_minor6_Icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/haimian_usericon"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/minepage_minor6_ID"
        android:layout_width="70dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/minepage_minor6_Icon"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/minepage_minor6_Icon"
        android:layout_marginLeft="5dp"
        android:text="海绵宝宝"/>

    <TextView
        android:id="@+id/minepage_minor6_Time"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/minepage_minor6_ID"
        app:layout_constraintLeft_toRightOf="@id/minepage_minor6_Icon"
        android:layout_marginLeft="5dp"
        android:textSize="11sp"
        android:text="2018.12.31 23:59"/>
    
    <TextView
        android:id="@+id/minepage_minor6_Content"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/minepage_minor6_ID"
        app:layout_constraintTop_toBottomOf="@id/minepage_minor6_Icon"
        android:text="亲爱的“洋葱”，您参与的任务“app描述”已经完成审核，点击这里即可获取奖励……"/>

</androidx.constraintlayout.widget.ConstraintLayout>